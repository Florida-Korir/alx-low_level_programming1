CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
# RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all open clean oclean fclean re

all: open

open: $(OBJ)
	$(CC) CFLAGS $(OBJ) -o $(NAME)

clean:
	$(RM) ./*~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
